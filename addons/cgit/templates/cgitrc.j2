# cgit configuration
# Generated by Ansible

# General settings
css={{ cgit_css }}
logo={{ cgit_logo }}
favicon={{ cgit_favicon }}

# Repository settings
scan-path={{ cgit_repo_path }}
max-repo-count={{ cgit_max_repo_count }}
max-repo-desc-length={{ cgit_max_repo_desc_length }}
max-readme-size={{ cgit_max_readme_size }}
max-blob-size={{ cgit_max_blob_size }}

# Features
enable-http-clone={{ cgit_enable_http_clone | lower }}
enable-log-filecount={{ cgit_enable_log | lower }}
enable-log-linecount={{ cgit_enable_log | lower }}
enable-tree-linenumbers={{ cgit_enable_log | lower }}
enable-commit-graph={{ cgit_enable_stats | lower }}
enable-stats={{ cgit_enable_stats | lower }}
enable-snapshots={{ cgit_enable_snapshots | lower }}

# Cache
cache-root={{ cgit_cache_path }}
cache-size=1000

# Logging
accesslog={{ cgit_log_path }}/access.log
errorlog={{ cgit_log_path }}/error.log

# Appearance
root-title={{ cgit_title }}
root-desc="Git repository browser"

# Clone URLs
clone-url=git://{{ ansible_fqdn }}/$CGIT_REPO_URL_PATH git@{{ ansible_fqdn }}:$CGIT_REPO_URL_PATH https://{{ ansible_fqdn }}{{ cgit_url_prefix }}/$CGIT_REPO_URL_PATH

# Repository information
section-from-path=1
section-sort=1

# Time settings
local-time=true

# MIME types
mimetype.gif=image/gif
mimetype.jpg=image/jpeg
mimetype.jpeg=image/jpeg
mimetype.png=image/png
mimetype.svg=image/svg+xml

# Source code highlighting
source-filter=/usr/lib/cgit/filters/syntax-highlighting.sh
about-filter=/usr/lib/cgit/filters/about-formatting.sh

# Readme files
readme=:README.md
readme=:readme.md
readme=:README.mkd
readme=:readme.mkd
readme=:README.rst
readme=:readme.rst
readme=:README.html
readme=:readme.html
readme=:README.txt
readme=:readme.txt
readme=:README
readme=:readme

# Repository owner (can be overridden per-repo)
repo.owner={{ cgit_fcgi_user }}

# Sorting
repo.sort=age
