<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ obsidian_site_title }}</title>
    <meta name="description" content="{{ obsidian_site_description }}">
    
    <!-- Marked.js for markdown parsing -->
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    
    <!-- Highlight.js for code highlighting -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.9.0/build/styles/github.min.css">
    <script src="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.9.0/build/highlight.min.js"></script>
    
    <style>
        :root {
            --bg-color: #ffffff;
            --text-color: #24292e;
            --link-color: #0969da;
            --border-color: #d0d7de;
            --code-bg: #f6f8fa;
            --header-bg: #f6f8fa;
            --hover-bg: #f3f4f6;
        }
        
        @media (prefers-color-scheme: dark) {
            :root {
                --bg-color: #0d1117;
                --text-color: #c9d1d9;
                --link-color: #58a6ff;
                --border-color: #30363d;
                --code-bg: #161b22;
                --header-bg: #161b22;
                --hover-bg: #21262d;
            }
        }
        
        * {
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans', Helvetica, Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: var(--bg-color);
            color: var(--text-color);
            line-height: 1.5;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .header {
            background-color: var(--header-bg);
            border-bottom: 1px solid var(--border-color);
            padding: 16px 0;
            position: sticky;
            top: 0;
            z-index: 100;
        }
        
        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .title {
            font-size: 20px;
            font-weight: 600;
            margin: 0;
        }
        
        .search-box {
            padding: 8px 12px;
            border: 1px solid var(--border-color);
            border-radius: 6px;
            background-color: var(--bg-color);
            color: var(--text-color);
            font-size: 14px;
            width: 300px;
        }
        
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 280px;
            height: 100vh;
            background-color: var(--header-bg);
            border-right: 1px solid var(--border-color);
            overflow-y: auto;
            padding: 20px 0;
            transform: translateX(-100%);
            transition: transform 0.3s ease;
            z-index: 200;
        }
        
        .sidebar.open {
            transform: translateX(0);
        }
        
        .sidebar-toggle {
            position: fixed;
            left: 10px;
            top: 70px;
            z-index: 201;
            background-color: var(--header-bg);
            border: 1px solid var(--border-color);
            border-radius: 6px;
            padding: 8px 12px;
            cursor: pointer;
            font-size: 14px;
        }
        
        .file-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .file-item {
            padding: 8px 20px;
            cursor: pointer;
            border-left: 3px solid transparent;
            transition: all 0.2s ease;
        }
        
        .file-item:hover {
            background-color: var(--hover-bg);
            border-left-color: var(--link-color);
        }
        
        .file-item.active {
            background-color: var(--hover-bg);
            border-left-color: var(--link-color);
            font-weight: 600;
        }
        
        .content {
            margin-left: 0;
            transition: margin-left 0.3s ease;
        }
        
        .content.with-sidebar {
            margin-left: 280px;
        }
        
        .markdown-body {
            background-color: var(--bg-color);
            padding: 32px;
            border-radius: 6px;
            border: 1px solid var(--border-color);
        }
        
        .markdown-body h1, .markdown-body h2, .markdown-body h3 {
            margin-top: 24px;
            margin-bottom: 16px;
            font-weight: 600;
            line-height: 1.25;
        }
        
        .markdown-body h1 {
            font-size: 2em;
            border-bottom: 1px solid var(--border-color);
            padding-bottom: 0.3em;
        }
        
        .markdown-body h2 {
            font-size: 1.5em;
            border-bottom: 1px solid var(--border-color);
            padding-bottom: 0.3em;
        }
        
        .markdown-body h3 {
            font-size: 1.25em;
        }
        
        .markdown-body p {
            margin-bottom: 16px;
        }
        
        .markdown-body a {
            color: var(--link-color);
            text-decoration: none;
        }
        
        .markdown-body a:hover {
            text-decoration: underline;
        }
        
        .markdown-body code {
            background-color: var(--code-bg);
            padding: 0.2em 0.4em;
            margin: 0;
            font-size: 85%;
            border-radius: 6px;
            font-family: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, monospace;
        }
        
        .markdown-body pre {
            background-color: var(--code-bg);
            border-radius: 6px;
            padding: 16px;
            overflow: auto;
            margin-bottom: 16px;
        }
        
        .markdown-body pre code {
            background-color: transparent;
            padding: 0;
            font-size: 100%;
        }
        
        .markdown-body blockquote {
            padding: 0 1em;
            color: #6b7280;
            border-left: 0.25em solid var(--border-color);
            margin: 0 0 16px 0;
        }
        
        .markdown-body ul, .markdown-body ol {
            padding-left: 2em;
            margin-bottom: 16px;
        }
        
        .markdown-body table {
            border-collapse: collapse;
            width: 100%;
            margin-bottom: 16px;
        }
        
        .markdown-body th, .markdown-body td {
            border: 1px solid var(--border-color);
            padding: 8px 12px;
            text-align: left;
        }
        
        .markdown-body th {
            background-color: var(--header-bg);
            font-weight: 600;
        }
        
        .loading {
            text-align: center;
            padding: 40px;
            color: #6b7280;
        }
        
        .error {
            text-align: center;
            padding: 40px;
            color: #dc2626;
        }
        
        .breadcrumb {
            margin-bottom: 20px;
            font-size: 14px;
            color: #6b7280;
        }
        
        .breadcrumb a {
            color: var(--link-color);
            text-decoration: none;
        }
        
        .breadcrumb a:hover {
            text-decoration: underline;
        }
        
        @media (max-width: 768px) {
            .search-box {
                width: 200px;
            }
            
            .content.with-sidebar {
                margin-left: 0;
            }
            
            .sidebar {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="header-content">
            <h1 class="title">{{ obsidian_site_title }}</h1>
            {% if obsidian_enable_search %}
            <input type="text" class="search-box" placeholder="Search notes..." id="searchInput">
            {% endif %}
        </div>
    </div>
    
    <button class="sidebar-toggle" id="sidebarToggle">â˜° Files</button>
    
    <div class="sidebar" id="sidebar">
        <ul class="file-list" id="fileList">
            <!-- Files will be loaded here -->
        </ul>
    </div>
    
    <div class="container">
        <div class="content" id="content">
            <div class="breadcrumb" id="breadcrumb"></div>
            <div class="markdown-body" id="markdownContent">
                <div class="loading">Loading...</div>
            </div>
        </div>
    </div>

    <script>
        // Configuration
        const config = {
            vaultPath: '{{ obsidian_url_prefix }}',
            excludePatterns: {{ obsidian_exclude_patterns | tojson }},
            enableSearch: {{ obsidian_enable_search | lower }}
        };
        
        // State
        let currentFile = null;
        let allFiles = [];
        let sidebarOpen = false;
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadFileList();
            setupEventListeners();
            loadDefaultFile();
        });
        
        // Setup event listeners
        function setupEventListeners() {
            document.getElementById('sidebarToggle').addEventListener('click', toggleSidebar);
            
            if (config.enableSearch) {
                document.getElementById('searchInput').addEventListener('input', handleSearch);
            }
            
            // Close sidebar when clicking outside
            document.addEventListener('click', function(e) {
                const sidebar = document.getElementById('sidebar');
                const toggle = document.getElementById('sidebarToggle');
                
                if (sidebarOpen && !sidebar.contains(e.target) && !toggle.contains(e.target)) {
                    closeSidebar();
                }
            });
        }
        
        // Toggle sidebar
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const content = document.getElementById('content');
            
            sidebarOpen = !sidebarOpen;
            
            if (sidebarOpen) {
                sidebar.classList.add('open');
                content.classList.add('with-sidebar');
            } else {
                sidebar.classList.remove('open');
                content.classList.remove('with-sidebar');
            }
        }
        
        function closeSidebar() {
            const sidebar = document.getElementById('sidebar');
            const content = document.getElementById('content');
            
            sidebarOpen = false;
            sidebar.classList.remove('open');
            content.classList.remove('with-sidebar');
        }
        
        // Load file list
        async function loadFileList() {
            try {
                // This would need a backend API to list files
                // For now, we'll show a simple interface
                const fileList = document.getElementById('fileList');
                fileList.innerHTML = '<li class="file-item">README.md</li>';
                
                // Add click handler
                fileList.querySelector('.file-item').addEventListener('click', function() {
                    loadFile('README.md');
                });
                
                allFiles = ['README.md'];
            } catch (error) {
                console.error('Error loading file list:', error);
            }
        }
        
        // Load default file
        function loadDefaultFile() {
            const path = window.location.hash.slice(1) || 'README.md';
            loadFile(path);
        }
        
        // Load file
        async function loadFile(filename) {
            if (currentFile === filename) return;
            
            currentFile = filename;
            updateBreadcrumb(filename);
            updateActiveFile(filename);
            
            const content = document.getElementById('markdownContent');
            content.innerHTML = '<div class="loading">Loading...</div>';
            
            try {
                const response = await fetch(`${config.vaultPath}/${filename}`);
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }
                
                const text = await response.text();
                const html = marked.parse(text);
                content.innerHTML = html;
                
                // Highlight code blocks
                content.querySelectorAll('pre code').forEach((block) => {
                    hljs.highlightBlock(block);
                });
                
                // Update URL
                window.location.hash = filename;
                
            } catch (error) {
                content.innerHTML = `<div class="error">Error loading ${filename}: ${error.message}</div>`;
            }
        }
        
        // Update breadcrumb
        function updateBreadcrumb(filename) {
            const breadcrumb = document.getElementById('breadcrumb');
            const parts = filename.split('/');
            
            let html = '<a href="#" onclick="loadFile(\'README.md\')">Home</a>';
            
            for (let i = 0; i < parts.length - 1; i++) {
                const path = parts.slice(0, i + 1).join('/');
                html += ` / <a href="#" onclick="loadFile('${path}')">${parts[i]}</a>`;
            }
            
            html += ` / ${parts[parts.length - 1]}`;
            breadcrumb.innerHTML = html;
        }
        
        // Update active file in sidebar
        function updateActiveFile(filename) {
            document.querySelectorAll('.file-item').forEach(item => {
                item.classList.remove('active');
                if (item.textContent === filename) {
                    item.classList.add('active');
                }
            });
        }
        
        // Handle search
        function handleSearch(e) {
            const query = e.target.value.toLowerCase();
            const fileItems = document.querySelectorAll('.file-item');
            
            fileItems.forEach(item => {
                const filename = item.textContent.toLowerCase();
                if (filename.includes(query)) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }
        
        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // Ctrl/Cmd + K for search
            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                e.preventDefault();
                document.getElementById('searchInput').focus();
            }
            
            // Escape to close sidebar
            if (e.key === 'Escape' && sidebarOpen) {
                closeSidebar();
            }
        });
    </script>
</body>
</html>
